@import "bootstrap";

@import url(https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css);

body,html {
  height: 100%;
  background-color: #151515;
}
body {
	padding-top: 46px;
}

/* carousel */
#la .item {
  margin: 0px;
}

.wide {
  width:100%;
  height:100%;
}

.wide img {
  width:100%;
}


#la .item img{
    display: block;
    width: 100%;
    height: 550px;
    margin: auto;
    
    
}

.wrapper {
	width: 68%;
}

h1 {
	color: #EDEDED;
	font-size: 5.7em;
	letter-spacing: .02px;
}

h2 {
	color: #EDEDED;
}

p {
	color: #EDEDED;
}

.logo {
  color:#fff;
  font-weight:800;
  font-size:14pt;
  padding:15px;
  text-align:center;
}

.line {
  padding:5px;
  white-space:no-wrap;
  overflow:hidden;
  text-align:center;
}
/* Sticky footer styles
-------------------------------------------------- */


.footer {
  position: relative;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 25px;
  margin-top: 80px;
  padding-top: 5px;
  padding-bottom: 7px;
  margin-right: 15px;
  margin-left: 15px;
  border-top: 1px solid   #282828 ;

  p {
  float: left;
  }
  
  small {
  	float: right; 
  	margin-right:0px;
  }
}
